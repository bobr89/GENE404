<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_slideshow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Test"
        android:textAlignment="center"
        android:layout_marginTop="55dp"
        android:textSize="35dp"
        android:fontFamily="@font/open_sans_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test 2"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_marginTop="105dp"
        android:fontFamily="@font/open_sans_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/Test2ResultsStatusReading"
        android:layout_width="205dp"
        android:layout_height="59dp"
        android:layout_marginTop="192dp"
        android:text="Results_Status: "
        android:textAlignment="center"
        android:textSize="20dp"
        android:background="@drawable/custom_button"
        android:fontFamily="@font/open_sans_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.288"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Test2Sensor1Reading"
        android:layout_width="210dp"
        android:layout_height="30dp"
        android:layout_marginTop="160dp"
        android:text="Sensor 1: "
        android:textSize="20dp"
        android:background="@drawable/custom_button"
        android:fontFamily="@font/open_sans_light"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.756"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Test2Sensor2Reading"
        android:layout_width="210dp"
        android:layout_height="30dp"
        android:layout_marginTop="212dp"
        android:text="Sensor 2: "
        android:textSize="20dp"
        android:background="@drawable/custom_button"
        android:fontFamily="@font/open_sans_light"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.756"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Test2Sensor3Reading"
        android:layout_width="210dp"
        android:layout_height="30dp"
        android:layout_marginTop="264dp"
        android:text="Sensor 3: "
        android:textSize="20dp"
        android:background="@drawable/custom_button"
        android:fontFamily="@font/open_sans_light"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.756"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/next_step"
        android:layout_width="155dp"
        android:layout_height="60dp"
        android:layout_marginStart="512dp"
        android:layout_marginLeft="512dp"
        android:layout_marginTop="304dp"
        android:fontFamily="@font/open_sans_regular"
        android:text="Next Test"
        android:textAllCaps="false"
        android:textColor="#008cd0"
        android:textSize="17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>